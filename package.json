{
  "name": "dpr-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist",
    "watch": "tsc --watch",
    "dev": "NODE_ENV=development nodemon dist",
    "db:migrate": "export NODE_ENV=development; npx sequelize-cli db:migrate",
    "db:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "migrate:refresh": "npm run db:undo:all && npm run db:migrate"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/node": "^15.0.2",
    "@types/validator": "^13.1.3",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "apollo-server-express": "^2.24.0",
    "argon2": "^0.27.2",
    "connect-session-sequelize": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2",
    "type-graphql": "^1.1.1"
  }
